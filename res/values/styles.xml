<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="OverlayText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="fontWeight">thin</item>
    </style>
    
    <style name="MediumOverlayText" parent="@style/OverlayText">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    
    <style name="LargeOverlayText" parent="@style/OverlayText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    
    <style name="TipsViewText" parent="@style/OverlayText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="fontWeight">light</item>
    </style>

</resources>
